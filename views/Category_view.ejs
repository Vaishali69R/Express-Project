<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <%-include('__bootstrap.ejs')%>
</head>
<body>
    <h1  class="text-center mb-4">Categories</h1>
    <div class="container mt-4">
    <table  class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Delete</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(category => { %>
                <tr>
                    <td><%= category.id %></td> 
                    <td><%= category.name %></td> 
                    <td>
                        <div class="d-flex flex-row justify-content-around" style="width:100%;">
                             <a onclick="return confirm('Do you want to delete ?')" href="/category/delete/<%=category.id%>"> 
                              <button class="btn btn-outline-danger" style="width:100px;">Delete</button>
                            </a>  
                        </div>
                     </td>
                     <td>
                        <div class="d-flex flex-row justify-content-around" style="width:100%;"></div>
                        <a href="/category/edit/<%=category.id%>">
                          <button class="btn btn-primary" style="width:100px;">Edit</button>
                        </a> 
                      </div>
                 </td>

                </tr>
            <% }) %>
        </tbody>
    </table>
    </div>
</body>
</html>
