<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <%- include('__header.ejs') %>
    <div class="container mt-5">
        <h1 class="mb-4">Product List</h1>

        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Category nmae</th>
                    <th>delete</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tbody>
                <% let i = 1%>
                <% products.forEach(product => { %>
                    <div>
                    <tr>
                        
                        <td><%= i++ %></td>
                        <td><%= product.product %></td>
                        <td><%= product.price %></td>
                        <td><%= product.category_name %></td>
                        <td>
                           <div class="d-flex flex-row justify-content-around" style="width:100%;">
                                <a onclick="return confirm('Do you want to delete ?')" href="/product/delete/<%=product.id%>"> 
                                 <button class="btn btn-outline-danger" style="width:100px;">Delete</button>
                               </a>  
                           
                        </td>
                        <td>
                               <a href="/product/edit/<%=product.id%>">
                                 <button class="btn btn-primary" style="width:100px;">Edit</button>
                               </a> 
                             <!-- </div> -->
                        </td>
                    </tr>
                    </div>
                    </div>
                <% }) %>
                    
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS (Optional for some interactive elements like modals, dropdowns, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
